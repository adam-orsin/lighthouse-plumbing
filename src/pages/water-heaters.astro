---
import ServiceLayout from '../layouts/ServiceLayout.astro';
import SectionHeading from '../components/ui/SectionHeading.astro';
import { business } from '../data/business';

const waterHeaterTypes = [
  {
    title: 'Tank Water Heaters',
    description: 'Traditional storage tank systems in various sizes, ideal for most homes.',
    icon: 'storage',
  },
  {
    title: 'Tankless Water Heaters',
    description: 'On-demand hot water with unlimited supply and energy savings.',
    icon: 'bolt',
  },
  {
    title: 'Heat Pump Water Heaters',
    description: 'Highly efficient systems that use ambient air to heat water.',
    icon: 'eco',
  },
  {
    title: 'Solar Water Heaters',
    description: 'Environmentally friendly systems that harness solar energy.',
    icon: 'sun',
  },
];

const warningSignsCategories = [
  {
    title: 'Performance Issues',
    signs: [
      'Inconsistent water temperature',
      'Water takes too long to heat up',
      'Running out of hot water quickly',
      'Water doesn\'t get as hot as it used to',
    ],
  },
  {
    title: 'Visible Problems',
    signs: [
      'Rust-colored water',
      'Leaking around the base',
      'Corrosion on tank or connections',
      'Sediment in water',
    ],
  },
  {
    title: 'Sounds & Smells',
    signs: [
      'Rumbling or popping noises',
      'Unusual odor from hot water',
      'Hissing or sizzling sounds',
      'Loud banging when heating',
    ],
  },
];

const iconPaths: Record<string, string> = {
  storage: 'M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4',
  bolt: 'M13 10V3L4 14h7v7l9-11h-7z',
  eco: 'M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15',
  sun: 'M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z',
};
---

<ServiceLayout
  title="Water Heater Services"
  description="Professional water heater installation, repair, and maintenance in Fall City, WA. Tank, tankless, and heat pump water heaters. 24/7 emergency service available."
  heroTitle="Water Heater Installation & Repair"
  heroSubtitle="Expert service for all types of water heaters. From emergency repairs to new installations, we keep your hot water flowing."
  heroImage="/images/water-heater-installation.jpeg"
  currentServiceId="water-heaters"
>
  <!-- Service Overview -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl md:text-4xl font-bold text-navy-800 mb-6">
            Complete Water Heater Solutions
          </h2>
          <p class="text-gray-600 mb-6">
            Whether you're dealing with a failing water heater or planning an upgrade to a more efficient system, Lighthouse Plumbing has you covered. Our licensed technicians are trained to work with all major brands and types of water heaters.
          </p>
          <p class="text-gray-600 mb-6">
            We provide honest assessmentsâ€”if a repair can extend your water heater's life, we'll tell you. If replacement makes more sense, we'll help you choose the right system for your home and budget.
          </p>

          <ul class="space-y-3">
            {['Same-day service available', 'All major brands serviced', 'Upfront pricing, no surprises', 'Parts and labor warranty'].map(item => (
              <li class="flex items-center gap-3">
                <svg class="w-5 h-5 text-accent flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-gray-700">{item}</span>
              </li>
            ))}
          </ul>
        </div>

        <div class="rounded-2xl overflow-hidden shadow-xl">
          <img
            src="/images/plumber-2.webp"
            alt="Lighthouse Plumbing technician at work"
            class="w-full h-full object-cover"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Types We Service -->
  <section class="section-padding bg-gray-50">
    <div class="container-custom">
      <SectionHeading
        title="Types of Water Heaters We Service"
        subtitle="From traditional tanks to modern tankless systems, we're equipped to handle them all."
      />

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {waterHeaterTypes.map(type => (
          <div class="bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow">
            <div class="w-14 h-14 bg-accent/10 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-7 h-7 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={iconPaths[type.icon]} />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-navy-800 mb-2">{type.title}</h3>
            <p class="text-gray-600 text-sm">{type.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Warning Signs -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <SectionHeading
        title="Warning Signs You Need Water Heater Service"
        subtitle="Don't ignore these red flags. Early intervention can prevent costly damage and emergency failures."
      />

      <div class="grid md:grid-cols-3 gap-8">
        {warningSignsCategories.map(category => (
          <div class="bg-navy-50 rounded-xl p-6">
            <h3 class="text-xl font-bold text-navy-800 mb-4">{category.title}</h3>
            <ul class="space-y-3">
              {category.signs.map(sign => (
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-red-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                  </svg>
                  <span class="text-gray-700">{sign}</span>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>

      <div class="mt-10 bg-accent/10 rounded-xl p-8 text-center">
        <h3 class="text-xl font-bold text-navy-800 mb-2">Experiencing Any of These Issues?</h3>
        <p class="text-gray-600 mb-4">Don't wait for a complete failure. Call us now for a professional diagnosis.</p>
        <a href={`tel:${business.phoneClean}`} class="btn-primary">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          Call {business.phone}
        </a>
      </div>
    </div>
  </section>

  <!-- Why Choose Us for Water Heaters -->
  <section class="section-padding bg-navy-800 text-white">
    <div class="container-custom">
      <SectionHeading
        title="Why Choose Us for Water Heater Service"
        subtitle="Local expertise you can trust for your home's hot water needs."
        light
      />

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {[
          { title: 'Fast Response', desc: 'Same-day service for most water heater issues. Emergency service available 24/7.' },
          { title: 'All Brands & Types', desc: 'We service Rheem, AO Smith, Bradford White, Rinnai, Navien, and more.' },
          { title: 'Licensed & Insured', desc: 'Full protection for you and your home with properly licensed technicians.' },
          { title: 'Honest Recommendations', desc: "We'll tell you if a repair makes sense or if it's time for replacement." },
          { title: 'Competitive Pricing', desc: 'Fair, upfront quotes. No hidden fees or surprise charges.' },
          { title: 'Workmanship Warranty', desc: 'We stand behind our work with comprehensive warranties.' },
        ].map(item => (
          <div class="flex gap-4">
            <div class="w-10 h-10 bg-accent rounded-full flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-bold mb-1">{item.title}</h3>
              <p class="text-navy-200 text-sm">{item.desc}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</ServiceLayout>
