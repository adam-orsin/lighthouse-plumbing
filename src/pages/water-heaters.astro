---
import ServiceLayout from '../layouts/ServiceLayout.astro';
import SectionHeading from '../components/ui/SectionHeading.astro';
import { business } from '../data/business';

const waterHeaterTypes = [
  {
    title: 'Tank Water Heaters',
    description: 'Traditional storage tank systems in various sizes, ideal for most homes. Typical lifespan: 8-12 years.',
    icon: 'storage',
  },
  {
    title: 'Tankless Water Heaters',
    description: 'On-demand hot water with unlimited supply and energy savings. Typical lifespan: 20+ years.',
    icon: 'bolt',
  },
  {
    title: 'Heat Pump Water Heaters',
    description: 'Highly efficient systems that use ambient air to heat water. Typical lifespan: 10-15 years.',
    icon: 'eco',
  },
  {
    title: 'Solar Water Heaters',
    description: 'Environmentally friendly systems that harness solar energy. Typical lifespan: 20+ years.',
    icon: 'sun',
  },
];

const warningSignsCategories = [
  {
    title: 'Performance Issues',
    signs: [
      'Inconsistent water temperature',
      'Water takes too long to heat up',
      'Running out of hot water quickly',
      'Water doesn\'t get as hot as it used to',
    ],
  },
  {
    title: 'Visible Problems',
    signs: [
      'Rust-colored water',
      'Leaking around the base',
      'Corrosion on tank or connections',
      'Sediment in water',
    ],
  },
  {
    title: 'Sounds & Smells',
    signs: [
      'Rumbling or popping noises',
      'Unusual odor from hot water',
      'Hissing or sizzling sounds',
      'Loud banging when heating',
    ],
  },
];

const faqItems = [
  {
    question: 'How long does water heater installation take?',
    answer: 'Most standard water heater replacements can be completed in 2-4 hours. Tankless installations or conversions from tank to tankless may take 4-8 hours depending on the required modifications to gas lines, venting, or electrical systems.',
  },
  {
    question: 'What size water heater do I need?',
    answer: 'For tank water heaters, a household of 1-2 people typically needs 30-40 gallons, 3-4 people need 40-50 gallons, and 5+ people need 50-80 gallons. Tankless units are sized by flow rate (GPM) based on how many fixtures you need to run simultaneously.',
  },
  {
    question: 'How much does water heater replacement cost?',
    answer: 'Costs vary based on the type and size of unit. We provide free estimates with upfront pricing so you know exactly what to expect. Financing options are available to help manage the investment.',
  },
  {
    question: 'Should I repair or replace my water heater?',
    answer: 'Generally, if your water heater is less than 8 years old and has a minor issue, repair makes sense. If it\'s over 10 years old, has a major problem like a leaking tank, or you\'re facing frequent repairs, replacement is usually more cost-effective.',
  },
  {
    question: 'Gas or electric: which water heater is better?',
    answer: 'Both have advantages. Gas water heaters heat water faster and cost less to operate but require venting. Electric water heaters are easier to install, safer (no combustion), and work well with solar panels. We\'ll help you choose based on your home\'s setup and preferences.',
  },
];

const iconPaths: Record<string, string> = {
  storage: 'M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4',
  bolt: 'M13 10V3L4 14h7v7l9-11h-7z',
  eco: 'M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15',
  sun: 'M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z',
};
---

<ServiceLayout
  title="Water Heater Services in Fall City & Snoqualmie Valley"
  description="Professional water heater installation, repair, and replacement in Fall City, Snoqualmie, Issaquah & surrounding areas. Tank, tankless, and heat pump water heaters. 24/7 emergency service. Free estimates."
  heroTitle="Water Heater Installation & Repair"
  heroSubtitle="Expert service for all types of water heaters. From emergency repairs to new installations, we keep your hot water flowing. 24/7 emergency service available."
  heroImage="/images/water-heater-installation.jpeg"
  currentServiceId="water-heaters"
>
  <!-- Google Reviews Badge + 24/7 Emergency Banner -->
  <section class="bg-navy-800 py-4">
    <div class="container-custom">
      <div class="flex flex-col md:flex-row items-center justify-center gap-6 md:gap-12">
        <!-- Google Reviews Badge -->
        <div class="flex items-center gap-3">
          <svg class="w-8 h-8" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
          </svg>
          <div class="flex items-center gap-2">
            <div class="flex text-yellow-400">
              {[1,2,3,4,5].map(() => (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
            <span class="text-white font-semibold">Over 250 5-Star Reviews on Google</span>
          </div>
        </div>

        <!-- 24/7 Emergency -->
        <div class="flex items-center gap-2 text-accent-light">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span class="font-semibold">24/7 Emergency Service Available</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Overview -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl md:text-4xl font-bold text-navy-800 mb-6">
            Complete Water Heater Solutions
          </h2>
          <p class="text-gray-600 mb-6">
            Whether you're dealing with a failing water heater or planning an upgrade to a more efficient system, Lighthouse Plumbing has you covered. Our licensed technicians are trained to work with all major brands and types of water heaters.
          </p>
          <p class="text-gray-600 mb-6">
            We provide honest assessments—if a repair can extend your water heater's life, we'll tell you. If replacement makes more sense, we'll help you choose the right system for your home and budget.
          </p>

          <ul class="space-y-3">
            {['Same-day service available', 'All major brands serviced', 'Upfront pricing, no surprises', 'Parts and labor warranty', 'Financing options available', 'Free estimates'].map(item => (
              <li class="flex items-center gap-3">
                <svg class="w-5 h-5 text-accent flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-gray-700">{item}</span>
              </li>
            ))}
          </ul>
        </div>

        <div class="rounded-2xl overflow-hidden shadow-xl">
          <img
            src="/images/plumber-2.webp"
            alt="Lighthouse Plumbing technician at work"
            class="w-full h-full object-cover"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Types We Service -->
  <section class="section-padding bg-gray-50">
    <div class="container-custom">
      <SectionHeading
        title="Types of Water Heaters We Service"
        subtitle="From traditional tanks to modern tankless systems, we're equipped to handle them all."
      />

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {waterHeaterTypes.map(type => (
          <div class="bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow">
            <div class="w-14 h-14 bg-accent/10 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-7 h-7 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={iconPaths[type.icon]} />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-navy-800 mb-2">{type.title}</h3>
            <p class="text-gray-600 text-sm">{type.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Gas vs Electric Section -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <SectionHeading
        title="Gas vs. Electric Water Heaters"
        subtitle="Understanding the differences helps you make the right choice for your home."
      />

      <div class="grid md:grid-cols-2 gap-8">
        <!-- Gas Water Heaters -->
        <div class="bg-gray-50 rounded-xl p-8">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-12 h-12 bg-orange-100 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z" />
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-navy-800">Gas Water Heaters</h3>
          </div>
          <ul class="space-y-3">
            {[
              'Faster heating and recovery time',
              'Lower operating costs',
              'Works during power outages',
              'Requires proper venting',
              'Best for high-demand households',
            ].map(item => (
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-accent flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-gray-700">{item}</span>
              </li>
            ))}
          </ul>
        </div>

        <!-- Electric Water Heaters -->
        <div class="bg-gray-50 rounded-xl p-8">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-navy-800">Electric Water Heaters</h3>
          </div>
          <ul class="space-y-3">
            {[
              'Easier and less expensive to install',
              'No combustion or venting required',
              'Safer with no gas leak risk',
              'Works well with solar panels',
              'More efficient energy conversion',
            ].map(item => (
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-accent flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-gray-700">{item}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>

      <p class="text-center text-gray-600 mt-8">
        Not sure which type is right for your home? Our experts will assess your needs and recommend the best solution.
      </p>
    </div>
  </section>

  <!-- Repair vs Replace Guide -->
  <section class="section-padding bg-navy-50">
    <div class="container-custom">
      <SectionHeading
        title="Should You Repair or Replace?"
        subtitle="Use this guide to help decide whether a repair makes sense or if it's time for a new water heater."
      />

      <div class="grid md:grid-cols-2 gap-8">
        <!-- When to Repair -->
        <div class="bg-white rounded-xl p-8 shadow-lg">
          <div class="flex items-center gap-3 mb-6">
            <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-navy-800">Consider Repair If:</h3>
          </div>
          <ul class="space-y-4">
            {[
              'Your water heater is less than 8 years old',
              'It\'s the first time having issues',
              'The problem is a minor part (thermostat, heating element, valve)',
              'No visible tank corrosion or leaks',
              'Repair cost is less than 50% of replacement',
            ].map(item => (
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-gray-700">{item}</span>
              </li>
            ))}
          </ul>
        </div>

        <!-- When to Replace -->
        <div class="bg-white rounded-xl p-8 shadow-lg">
          <div class="flex items-center gap-3 mb-6">
            <div class="w-12 h-12 bg-red-100 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-navy-800">Consider Replacement If:</h3>
          </div>
          <ul class="space-y-4">
            {[
              'Your tank water heater is over 10-12 years old',
              'You\'re experiencing frequent repairs',
              'The tank is leaking or showing corrosion',
              'Your energy bills have increased significantly',
              'You want to upgrade to a more efficient system',
            ].map(item => (
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-red-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
                <span class="text-gray-700">{item}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>

      <div class="mt-10 bg-white rounded-xl p-8 text-center shadow-lg">
        <h3 class="text-xl font-bold text-navy-800 mb-2">Not Sure Which Option Is Right?</h3>
        <p class="text-gray-600 mb-4">We'll provide an honest assessment and help you make the most cost-effective decision.</p>
        <a href={`tel:${business.phoneClean}`} class="btn-primary">
          Get a Free Diagnosis
        </a>
      </div>
    </div>
  </section>

  <!-- Warning Signs -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <SectionHeading
        title="Warning Signs You Need Water Heater Service"
        subtitle="Don't ignore these red flags. Early intervention can prevent costly damage and emergency failures."
      />

      <div class="grid md:grid-cols-3 gap-8">
        {warningSignsCategories.map(category => (
          <div class="bg-navy-50 rounded-xl p-6">
            <h3 class="text-xl font-bold text-navy-800 mb-4">{category.title}</h3>
            <ul class="space-y-3">
              {category.signs.map(sign => (
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-red-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                  </svg>
                  <span class="text-gray-700">{sign}</span>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>

      <div class="mt-10 bg-accent/10 rounded-xl p-8 text-center">
        <h3 class="text-xl font-bold text-navy-800 mb-2">Experiencing Any of These Issues?</h3>
        <p class="text-gray-600 mb-4">Don't wait for a complete failure. Call us now for a professional diagnosis.</p>
        <a href={`tel:${business.phoneClean}`} class="btn-primary">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          Call {business.phone}
        </a>
      </div>
    </div>
  </section>

  <!-- Water Heater Lifespan Info -->
  <section class="section-padding bg-gray-50">
    <div class="container-custom">
      <SectionHeading
        title="Water Heater Lifespan & Efficiency"
        subtitle="Understanding how long your water heater should last helps you plan for the future."
      />

      <div class="grid md:grid-cols-4 gap-6">
        {[
          { type: 'Tank (Gas)', lifespan: '8-12 years', efficiency: '60-70%', icon: 'M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z' },
          { type: 'Tank (Electric)', lifespan: '10-15 years', efficiency: '90-95%', icon: 'M13 10V3L4 14h7v7l9-11h-7z' },
          { type: 'Tankless', lifespan: '20+ years', efficiency: '95-98%', icon: 'M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z' },
          { type: 'Heat Pump', lifespan: '10-15 years', efficiency: '200-300%', icon: 'M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15' },
        ].map(item => (
          <div class="bg-white rounded-xl p-6 text-center shadow-lg">
            <div class="w-14 h-14 bg-accent/10 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-7 h-7 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={item.icon} />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-navy-800 mb-3">{item.type}</h3>
            <div class="space-y-2 text-sm">
              <p class="text-gray-600">Lifespan: <span class="font-semibold text-navy-800">{item.lifespan}</span></p>
              <p class="text-gray-600">Efficiency: <span class="font-semibold text-navy-800">{item.efficiency}</span></p>
            </div>
          </div>
        ))}
      </div>

      <p class="text-center text-gray-500 text-sm mt-6">
        *Heat pump efficiency over 100% is possible because they move heat rather than generate it.
      </p>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <SectionHeading
        title="Frequently Asked Questions"
        subtitle="Get answers to common questions about water heater service."
      />

      <div class="max-w-3xl mx-auto">
        <div class="space-y-4">
          {faqItems.map((faq, index) => (
            <details class="group bg-gray-50 rounded-xl">
              <summary class="flex items-center justify-between p-6 cursor-pointer list-none">
                <h3 class="text-lg font-semibold text-navy-800 pr-4">{faq.question}</h3>
                <svg class="w-5 h-5 text-accent flex-shrink-0 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </summary>
              <div class="px-6 pb-6">
                <p class="text-gray-600">{faq.answer}</p>
              </div>
            </details>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Service Areas -->
  <section class="section-padding bg-navy-50">
    <div class="container-custom">
      <SectionHeading
        title="Water Heater Service Areas"
        subtitle="Proudly serving the Snoqualmie Valley and East King County communities."
      />

      <div class="grid grid-cols-2 md:grid-cols-5 gap-4 max-w-4xl mx-auto">
        {business.serviceAreas.map(area => (
          <div class="bg-white rounded-lg p-4 text-center shadow-sm hover:shadow-md transition-shadow">
