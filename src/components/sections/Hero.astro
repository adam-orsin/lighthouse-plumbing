---
import { business, trustBadges } from '../../data/business';
import Button from '../ui/Button.astro';
import TrustBadge from '../ui/TrustBadge.astro';
---

<section class="relative min-h-[600px] lg:min-h-[700px] flex items-center bg-navy-900 overflow-hidden">
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-gradient-to-r from-navy-900 via-navy-900/95 to-navy-800/80 z-10"></div>
    <img
      src="/images/van.webp"
      alt="Lighthouse Plumbing service van"
      class="w-full h-full object-cover"
    />
  </div>

  <div class="container-custom relative z-20 py-20 lg:py-32">
    <div class="max-w-3xl">
      <!-- Badge -->
      <div class="inline-flex items-center gap-2 bg-accent/20 text-accent-light px-4 py-2 rounded-full mb-6">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
        <span class="text-sm font-semibold">Trusted Since {business.established}</span>
      </div>

      <!-- Headline -->
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 leading-tight">
        Your Local
        <span class="text-accent">Plumbing Experts</span>
        <br />in the Snoqualmie Valley
      </h1>

      <!-- Subheadline -->
      <p class="text-xl text-navy-100 mb-8 max-w-2xl">
        From emergency repairs to new installations, {business.name} delivers reliable,
        honest plumbing services to {business.address.city} and surrounding communities.
      </p>

      <!-- CTAs -->
      <div class="flex flex-col sm:flex-row gap-4 mb-12">
        <a
          href={`tel:${business.phoneClean}`}
          class="btn-white text-lg py-4 px-8"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          {business.phone}
        </a>
        <Button href="/contact" variant="primary" size="lg">
          Schedule Service
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </Button>
      </div>

      <!-- Trust Badges -->
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-4">
        {trustBadges.map(badge => (
          <TrustBadge
            icon={badge.icon}
            title={badge.title}
            description={badge.description}
            variant="dark"
          />
        ))}
      </div>
    </div>
  </div>

  <!-- Decorative Element -->
  <div class="absolute bottom-0 left-0 right-0 h-24 bg-gradient-to-t from-white to-transparent z-20"></div>
</section>
