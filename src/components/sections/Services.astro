---

<section class="section-padding bg-white">
  <div class="container-custom">
    <SectionHeading
      title="Our Plumbing Services"
      subtitle="From routine maintenance to emergency repairs, we've got you covered with comprehensive plumbing solutions."
    />

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
      {featuredServices.map(service => (
        <Card
          variant="bordered"
          href={service.slug || '/contact'}
          class="group"
        >
          <div class="w-14 h-14 bg-accent/10 rounded-xl flex items-center justify-center mb-4 group-hover:bg-accent transition-colors">
            <svg
              class="w-7 h-7 text-accent group-hover:text-white transition-colors"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d={iconPaths[service.icon] || iconPaths['wrench']}
              />
            </svg>
          </div>

          <h3 class="text-xl font-bold text-navy-800 mb-2 group-hover:text-accent transition-colors">
            {service.shortName}
          </h3>

          <p class="text-gray-600 text-sm mb-4">
            {service.description}
          </p>

          <span class="inline-flex items-center text-accent font-semibold text-sm">
            Learn More
            <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </span>
        </Card>
      ))}
    </div>

    <div class="text-center mt-10">
      <a href="/contact" class="btn-secondary">
        View All Services
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </div>
  </div>
</section>
