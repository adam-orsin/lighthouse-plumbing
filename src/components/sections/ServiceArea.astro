---
import { business } from '../../data/business';
import SectionHeading from '../ui/SectionHeading.astro';
---

<section class="section-padding bg-navy-800 text-white">
  <div class="container-custom">
    <SectionHeading
      title="Serving the Snoqualmie Valley"
      subtitle="Proudly providing plumbing services throughout the greater Snoqualmie Valley and surrounding areas."
      light
    />

    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Map -->
      <div class="rounded-2xl overflow-hidden shadow-2xl">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d172259.5574287961!2d-122.0547!3d47.5673!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x54907da6eb6fc99f%3A0xba3a7c6c8e1c4f63!2sFall%20City%2C%20WA!5e0!3m2!1sen!2sus!4v1700000000000!5m2!1sen!2sus"
          width="100%"
          height="350"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          title="Service Area Map"
          class="w-full"
        ></iframe>
      </div>

      <!-- Cities List -->
      <div>
        <h3 class="text-2xl font-bold mb-6">
          Cities We Serve
        </h3>

        <div class="grid grid-cols-2 gap-4">
          {business.serviceAreas.map(city => (
            <div class="flex items-center gap-3">
              <div class="w-8 h-8 bg-accent/20 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-4 h-4 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <span class="text-navy-100">{city}</span>
            </div>
          ))}
        </div>

        <div class="mt-8 p-6 bg-navy-700/50 rounded-xl">
          <p class="text-navy-100 mb-4">
            Don't see your city? We may still be able to help! Give us a call to confirm service availability in your area.
          </p>
          <a
            href={`tel:${business.phoneClean}`}
            class="inline-flex items-center gap-2 text-accent font-semibold hover:text-accent-light transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            {business.phone}
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
