---
import { business } from '../../data/business';

interface Props {
  title?: string;
  subtitle?: string;
  showEmergency?: boolean;
}

const {
  title = "Need Plumbing Help Today?",
  subtitle = "Our team is standing by to solve your plumbing problems quickly and professionally.",
  showEmergency = true,
} = Astro.props;
---

<section class="relative py-16 md:py-20 bg-accent overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
      <defs>
        <pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse">
          <path d="M 10 0 L 0 0 0 10" fill="none" stroke="white" stroke-width="0.5" />
        </pattern>
      </defs>
      <rect width="100%" height="100%" fill="url(#grid)" />
    </svg>
  </div>

  <div class="container-custom relative z-10">
    <div class="max-w-3xl mx-auto text-center">
      {showEmergency && (
        <div class="inline-flex items-center gap-2 bg-white/20 text-white px-4 py-2 rounded-full mb-6">
          <span class="relative flex h-3 w-3">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-white opacity-75"></span>
            <span class="relative inline-flex rounded-full h-3 w-3 bg-white"></span>
          </span>
          <span class="text-sm font-semibold">24/7 Emergency Service Available</span>
        </div>
      )}

      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-4">
        {title}
      </h2>

      <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
        {subtitle}
      </p>

      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <a
          href={`tel:${business.phoneClean}`}
          class="btn-white text-lg py-4 px-8"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          Call {business.phone}
        </a>
        <a
          href="/contact"
          class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white border-2 border-white rounded-lg hover:bg-white hover:text-accent transition-colors duration-200"
        >
          Schedule Service
        </a>
      </div>
    </div>
  </div>
</section>
