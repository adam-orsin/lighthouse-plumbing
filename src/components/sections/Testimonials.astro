---
import { testimonials } from '../../data/testimonials';
import SectionHeading from '../ui/SectionHeading.astro';

function renderStars(rating: number) {
  return Array(5).fill(null).map((_, i) => i < rating);
}
---

<section class="section-padding bg-white">
  <div class="container-custom">
    <SectionHeading
      title="What Our Customers Say"
      subtitle="Don't just take our word for itâ€”hear from our satisfied customers."
    />

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {testimonials.slice(0, 3).map((testimonial, index) => (
        <div
          class="bg-gray-50 rounded-2xl p-8 relative fade-in"
          style={`animation-delay: ${index * 100}ms`}
        >
          <!-- Quote Icon -->
          <div class="absolute top-6 right-6 text-navy-100">
            <svg class="w-10 h-10" fill="currentColor" viewBox="0 0 24 24">
              <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
            </svg>
          </div>

          <!-- Stars -->
          <div class="flex gap-1 mb-4">
            {renderStars(testimonial.rating).map((filled) => (
              <svg
                class={`w-5 h-5 ${filled ? 'text-yellow-400' : 'text-gray-300'}`}
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>

          <!-- Testimonial Text -->
          <p class="text-gray-700 mb-6 leading-relaxed">
            "{testimonial.text}"
          </p>

          <!-- Customer Info -->
          <div class="border-t border-gray-200 pt-4">
            <p class="font-bold text-navy-800">{testimonial.name}</p>
            <p class="text-sm text-gray-500">{testimonial.location}</p>
            {testimonial.service && (
              <p class="text-xs text-accent mt-1">{testimonial.service}</p>
            )}
          </div>
        </div>
      ))}
    </div>

    <!-- Google Reviews Link -->
    <div class="text-center mt-10">
      <a
        href="https://g.page/lighthouseplumbing/review"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 text-accent font-semibold hover:text-accent-hover transition-colors"
      >
        <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
          <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
          <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
          <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
          <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
        </svg>
        View More Reviews on Google
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </a>
    </div>
  </div>
</section>
