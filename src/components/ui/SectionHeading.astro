---
interface Props {
  title: string;
  subtitle?: string;
  alignment?: 'left' | 'center';
  light?: boolean;
}

const { title, subtitle, alignment = 'center', light = false } = Astro.props;

const alignmentClass = alignment === 'center' ? 'text-center' : 'text-left';
const titleClass = light ? 'text-white' : 'text-navy-800';
const subtitleClass = light ? 'text-navy-100' : 'text-gray-600';
---

<div class={`mb-12 ${alignmentClass}`}>
  <h2 class={`text-3xl md:text-4xl font-bold ${titleClass} mb-4`}>
    {title}
  </h2>
  {subtitle && (
    <p class={`text-lg max-w-2xl ${alignment === 'center' ? 'mx-auto' : ''} ${subtitleClass}`}>
      {subtitle}
    </p>
  )}
</div>
