---
interface Props {
  icon: string;
  title: string;
  description: string;
  variant?: 'light' | 'dark';
}

const { icon, title, description, variant = 'light' } = Astro.props;

const iconPaths: Record<string, string> = {
  clock: 'M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z',
  'map-pin': 'M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z',
  phone: 'M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z',
  shield: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z',
};

const bgClass = variant === 'dark' ? 'bg-navy-700/50' : 'bg-navy-50';
const iconBgClass = variant === 'dark' ? 'bg-accent' : 'bg-accent/10';
const iconColorClass = variant === 'dark' ? 'text-white' : 'text-accent';
const titleClass = variant === 'dark' ? 'text-white' : 'text-navy-800';
const descClass = variant === 'dark' ? 'text-navy-200' : 'text-gray-600';
---

<div class={`flex items-center gap-4 p-4 rounded-lg ${bgClass}`}>
  <div class={`flex-shrink-0 w-12 h-12 rounded-full ${iconBgClass} flex items-center justify-center`}>
    <svg class={`w-6 h-6 ${iconColorClass}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={iconPaths[icon] || iconPaths.shield} />
    </svg>
  </div>
  <div>
    <h3 class={`font-bold ${titleClass}`}>{title}</h3>
    <p class={`text-sm ${descClass}`}>{description}</p>
  </div>
</div>
