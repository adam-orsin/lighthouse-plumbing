---
import { business } from '../../data/business';
import { services } from '../../data/services';

const currentYear = new Date().getFullYear();

const quickLinks = [
  { label: 'Home', href: '/' },
  { label: 'Water Heaters', href: '/water-heaters' },
  { label: 'Horizontal Boring', href: '/horizontal-boring' },
  { label: 'Contact', href: '/contact' },
];
---

<footer class="bg-navy-800 text-white">
  <div class="container-custom section-padding">
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-12">
      <!-- Company Info -->
      <div class="lg:col-span-1">
        <a href="/" class="flex items-center mb-6">
          <img
            src="/images/logo.webp"
            alt="Lighthouse Plumbing"
            class="h-12 w-auto brightness-0 invert"
          />
        </a>
        <p class="text-navy-200 mb-4">
          {business.tagline}. Serving the Snoqualmie Valley and surrounding areas since {business.established}.
        </p>
        <p class="text-sm text-navy-300">
          License: {business.license}
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-lg font-bold mb-6">Quick Links</h3>
        <ul class="space-y-3">
          {quickLinks.map(link => (
            <li>
              <a
                href={link.href}
                class="text-navy-200 hover:text-accent transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services -->
      <div>
        <h3 class="text-lg font-bold mb-6">Services</h3>
        <ul class="space-y-3">
          {services.slice(0, 5).map(service => (
            <li>
              <a
                href={service.slug || '/contact'}
                class="text-navy-200 hover:text-accent transition-colors"
              >
                {service.shortName}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h3 class="text-lg font-bold mb-6">Contact Us</h3>
        <ul class="space-y-4">
          <li>
            <a
              href={`tel:${business.phoneClean}`}
              class="flex items-start gap-3 text-navy-200 hover:text-accent transition-colors"
            >
              <svg class="w-5 h-5 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              <span>{business.phone}</span>
            </a>
          </li>
          <li>
            <a
              href={`mailto:${business.email}`}
              class="flex items-start gap-3 text-navy-200 hover:text-accent transition-colors"
            >
              <svg class="w-5 h-5 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <span>{business.email}</span>
            </a>
          </li>
          <li class="flex items-start gap-3 text-navy-200">
            <svg class="w-5 h-5 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span>{business.address.full}</span>
          </li>
          <li class="flex items-start gap-3 text-navy-200">
            <svg class="w-5 h-5 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
              <p>Mon-Fri: {business.hours.weekdays}</p>
              <p>Sat: {business.hours.saturday}</p>
              <p>Sun: {business.hours.sunday}</p>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-navy-700">
    <div class="container-custom py-6">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-navy-300 text-sm">
          &copy; {currentYear} {business.name}. All rights reserved.
        </p>
        <div class="flex items-center gap-6">
          <a href="/privacy" class="text-navy-300 text-sm hover:text-accent transition-colors">
            Privacy Policy
          </a>
          <a href="/terms" class="text-navy-300 text-sm hover:text-accent transition-colors">
            Terms of Service
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
