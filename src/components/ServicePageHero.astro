---
import { business } from '../data/business';
import Button from './ui/Button.astro';

interface Props {
  title: string;
  subtitle: string;
  backgroundImage?: string;
}

const {
  title,
  subtitle,
  backgroundImage = '/images/van.webp',
} = Astro.props;
---

<section class="relative py-20 md:py-28 bg-navy-900 overflow-hidden">
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-gradient-to-r from-navy-900 via-navy-900/90 to-navy-800/70 z-10"></div>
    <img
      src={backgroundImage}
      alt=""
      class="w-full h-full object-cover"
      loading="eager"
    />
  </div>

  <div class="container-custom relative z-20">
    <div class="max-w-3xl">
      <!-- Breadcrumb -->
      <nav class="flex items-center gap-2 text-navy-200 mb-6 text-sm">
        <a href="/" class="hover:text-accent transition-colors">Home</a>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
        <span class="text-white">Services</span>
      </nav>

      <!-- Title -->
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 leading-tight">
        {title}
      </h1>

      <!-- Subtitle -->
      <p class="text-xl text-navy-100 mb-8 max-w-2xl">
        {subtitle}
      </p>

      <!-- CTAs -->
      <div class="flex flex-col sm:flex-row gap-4">
        <a
          href={`tel:${business.phoneClean}`}
          class="btn-white text-lg py-4 px-8"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          {business.phone}
        </a>
        <Button href="/contact" variant="primary" size="lg">
          Get a Free Estimate
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </Button>
      </div>
    </div>
  </div>

  <!-- Decorative Element -->
  <div class="absolute bottom-0 left-0 right-0 h-16 bg-gradient-to-t from-white to-transparent z-20"></div>
</section>
